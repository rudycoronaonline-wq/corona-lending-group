---
interface Props {
  headline: string;
  sub?: string;
  buttonText?: string;
  buttonHref?: string;
}

const { headline, sub = '', buttonText = 'Book My Free Consultation', buttonHref = '/contact' } = Astro.props;
---

<section class="bg-navy text-white py-16 px-4 text-center">
  <h2 class="font-heading text-3xl md:text-4xl font-semibold mb-4">{headline}</h2>
  {sub && <p class="text-white/90 max-w-xl mx-auto mb-8">{sub}</p>}
  <a
    href={buttonHref}
    class="inline-block min-h-[44px] px-8 py-4 bg-sky-500 hover:bg-sky-600 text-white font-semibold rounded-lg transition-all duration-200 hover:scale-105"
  >
    {buttonText}
  </a>
</section>
