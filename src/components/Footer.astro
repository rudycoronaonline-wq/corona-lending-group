---
const currentYear = new Date().getFullYear();
const links = [
  { href: '/', label: 'Home' },
  { href: '/about', label: 'About' },
  { href: '/services', label: 'Services' },
  { href: '/calculators', label: 'Calculators' },
  { href: '/blog', label: 'Blog' },
  { href: '/testimonials', label: 'Testimonials' },
  { href: '/faq', label: 'FAQ' },
  { href: '/contact', label: 'Contact' },
];
---

<footer class="bg-navy text-white">
  <div class="container mx-auto px-4 py-12 md:py-16">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-10 md:gap-8">
      <!-- Col 1: Logo + tagline + social -->
      <div>
        <a href="/" class="inline-block mb-4">
          <img src="/images/logo.png" alt="Corona Lending Group" class="h-10 w-auto brightness-0 invert" width="150" height="40" />
        </a>
        <p class="text-white/90 text-sm max-w-xs mb-6">
          Your Southern California mortgage advisor — from first home to dream home.
        </p>
        <div class="flex gap-4">
          <a href="#" class="text-white/80 hover:text-white transition-colors min-w-[44px] min-h-[44px] flex items-center justify-center" aria-label="LinkedIn">LinkedIn</a>
          <a href="#" class="text-white/80 hover:text-white transition-colors min-w-[44px] min-h-[44px] flex items-center justify-center" aria-label="Facebook">Facebook</a>
          <a href="#" class="text-white/80 hover:text-white transition-colors min-w-[44px] min-h-[44px] flex items-center justify-center" aria-label="Instagram">Instagram</a>
        </div>
      </div>

      <!-- Col 2: Quick links -->
      <div>
        <h3 class="font-heading font-semibold text-lg mb-4">Quick Links</h3>
        <ul class="space-y-2">
          {links.map(({ href, label }) => (
            <li>
              <a href={href} class="text-white/90 hover:text-white transition-colors text-sm">{label}</a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Col 3: Contact -->
      <div>
        <h3 class="font-heading font-semibold text-lg mb-4">Contact</h3>
        <ul class="space-y-2 text-sm text-white/90">
          <li>Phone: <a href="tel:+13105945362" class="hover:text-white">(310) 594-5362</a></li>
          <li>Email: <a href="mailto:rudycoronalending@gmail.com" class="hover:text-white">rudycoronalending@gmail.com</a></li>
          <li>NMLS# 999113</li>
          <li>Licensed in California</li>
          <li>1611 S Pacific Coast Hwy #102, Redondo Beach, CA 90277</li>
        </ul>
      </div>
    </div>

    <div class="border-t border-white/20 mt-10 pt-6 flex flex-col sm:flex-row justify-between items-center gap-4">
      <p class="text-white/80 text-sm">
        © {currentYear} Corona Lending Group. All rights reserved.
        <a href="/privacy" class="underline hover:text-white ml-1">Privacy Policy</a>
      </p>
      <p class="text-white/70 text-xs max-w-xl text-center sm:text-right">
        Corona Lending Group is a licensed mortgage advisor. NMLS# 999113. This is not a commitment to lend. All loans subject to credit approval.
      </p>
    </div>
  </div>
</footer>
