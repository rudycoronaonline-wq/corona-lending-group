---
interface Props {
  name: string;
  loanType: string;
  quote: string;
  stars?: number;
  city?: string;
}

const { name, loanType, quote, stars = 5, city } = Astro.props;
---

<article class="bg-white rounded-xl p-6 shadow-lg text-dark">
  <div class="flex gap-1 text-amber-400 mb-4" aria-label={`${stars} star rating`}>
    {Array.from({ length: stars }).map(() => '★')}
  </div>
  <blockquote class="text-dark/90 italic mb-4">&ldquo;{quote}&rdquo;</blockquote>
  <footer>
    <p class="font-semibold text-navy">{name}</p>
    <p class="text-sm text-dark/70">{loanType}{city ? ` · ${city}` : ''}</p>
  </footer>
</article>
