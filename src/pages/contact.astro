---
import Layout from '../layouts/Layout.astro';
import ContactForm from '../components/ContactForm.astro';
import headshotImage from '../assets/images/rudy-headshot.jpg';
const officeHours = 'Mon‚ÄìFri 9am‚Äì6pm PT';
const mapsUrl = 'https://www.google.com/maps/search/?api=1&query=1611+S+Pacific+Coast+Highway+%23102+Redondo+Beach+CA+90277';
---

<Layout
  title="Book a Free Consultation | Corona Lending Group"
  description="Ready to buy a home or refinance? Book your free mortgage consultation with Rudy Corona today."
  pathname="/contact"
>
  <section class="bg-navy text-white py-16 md:py-20 px-4">
    <div class="container mx-auto text-center">
      <h1 class="font-heading text-4xl md:text-5xl font-bold mb-4">Let's Find Your Perfect Loan</h1>
      <p class="text-white/90 text-lg max-w-2xl mx-auto">
        Fill out the form below, call, or email. Your consultation is 100% free.
      </p>
    </div>
  </section>

  <section id="form" class="py-20 px-4 bg-page scroll-mt-24">
    <div class="container mx-auto grid grid-cols-1 lg:grid-cols-2 gap-12">
      <div>
        <h2 class="font-heading text-navy text-2xl font-semibold mb-6">Send a Message</h2>
        <p class="text-dark/80 text-sm mb-6">Tell me about your situation and I'll get back to you within 24 hours.</p>
        <ContactForm />
      </div>
      <div>
        <div class="flex flex-col items-center lg:items-start mb-6">
          <img
            src={headshotImage.src}
            alt="Rudy Corona"
            class="rounded-2xl shadow-lg w-40 h-40 object-cover mb-4"
            width="160"
            height="160"
            loading="eager"
          />
          <h2 class="font-heading text-navy text-2xl font-semibold mb-2">Get in Touch</h2>
          <p class="text-dark/80 text-sm">Rudy Corona ¬∑ Corona Lending Group</p>
        </div>

        <div class="bg-white rounded-xl p-6 border border-grey-light shadow-sm space-y-4 mb-6">
          <p class="font-semibold text-navy border-b border-grey-light pb-2">Contact &amp; Location</p>
          <p class="flex items-start gap-3">
            <span class="text-sky-500 shrink-0" aria-hidden="true">üìû</span>
            <a href="tel:+13105945362" class="text-dark hover:text-sky-500 font-medium">(310) 594-5362</a>
          </p>
          <p class="flex items-start gap-3">
            <span class="text-sky-500 shrink-0" aria-hidden="true">‚úâÔ∏è</span>
            <a href="mailto:rudycoronalending@gmail.com" class="text-dark hover:text-sky-500 break-all">rudycoronalending@gmail.com</a>
          </p>
          <p class="flex items-start gap-3">
            <span class="text-sky-500 shrink-0" aria-hidden="true">üìç</span>
            <a href={mapsUrl} target="_blank" rel="noopener noreferrer" class="text-dark hover:text-sky-500">
              1611 S Pacific Coast Hwy #102<br />Redondo Beach, CA 90277
            </a>
          </p>
          <p class="text-dark/70 text-sm pt-2">NMLS# 999113 ¬∑ Licensed in California</p>
        </div>

        <div class="bg-sky-light rounded-xl p-4 mb-6">
          <p class="text-navy font-medium text-sm">Office hours</p>
          <p class="text-dark/80 text-sm">{officeHours}</p>
          <p class="text-dark/60 text-xs mt-1">Typical response: within 24 hours</p>
        </div>

        <div class="p-6 bg-white rounded-xl border border-grey-light text-center">
          <p class="text-navy font-semibold mb-2">Prefer to talk now?</p>
          <p class="text-dark/80 text-sm mb-4">Call or text (310) 594-5362 for a quick conversation.</p>
          <a href="tel:+13105945362" class="inline-block min-h-[44px] px-6 py-3 bg-sky-500 hover:bg-sky-600 text-white font-semibold rounded-lg transition-all duration-200 hover:scale-105">
            Call (310) 594-5362
          </a>
        </div>
      </div>
    </div>
  </section>
</Layout>
