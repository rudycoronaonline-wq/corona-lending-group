---
import Layout from '../layouts/Layout.astro';
import { services } from '../data/services';
---

<Layout
  title="Mortgage Services | Conventional, FHA, DSCR & More | Corona Lending Group"
  description="Explore mortgage solutions for every need: Conventional, FHA, DSCR, Reverse Mortgage, Self-Employed, Hard Money, and Commercial loans."
  pathname="/services"
>
  <section class="bg-navy text-white py-16 md:py-20 px-4">
    <div class="container mx-auto text-center">
      <h1 class="font-heading text-4xl md:text-5xl font-bold mb-4">Find the Right Loan for You</h1>
      <p class="text-white/90 text-lg max-w-2xl mx-auto">
        From first-time homebuyers to investors and seniors—every loan type, explained clearly.
      </p>
    </div>
  </section>

  <section class="py-20 px-4 bg-page">
    <div class="container mx-auto space-y-16">
      {services.map((s) => (
        <article id={s.slug} class="scroll-mt-28 bg-white rounded-2xl shadow-sm border border-grey-light overflow-hidden">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-0">
            <div class="p-8 md:p-12">
              <h2 class="font-heading text-navy text-2xl md:text-3xl font-semibold mb-4">{s.title}</h2>
              <p class="text-dark/90 mb-6">{s.fullDesc}</p>
              <p class="text-dark/80 text-sm font-medium mb-2">Who it's for:</p>
              <p class="text-dark/80 mb-6">{s.idealFor}</p>
              <ul class="space-y-2 mb-8">
                {s.benefits.map((b) => (
                  <li class="flex items-start gap-2 text-dark/90">
                    <span class="text-sky-500 mt-0.5">✓</span> {b}
                  </li>
                ))}
              </ul>
              <a href="/contact" class="inline-block min-h-[44px] px-6 py-3 bg-sky-500 hover:bg-sky-600 text-white font-semibold rounded-lg transition-all duration-200 hover:scale-105">
                Ask me about this loan
              </a>
            </div>
            <div class="aspect-video md:aspect-auto md:min-h-[280px] bg-sky-light flex items-center justify-center">
              <img src={s.image} alt="" class="w-full h-full object-cover" />
            </div>
          </div>
        </article>
      ))}
    </div>
  </section>

  <section class="py-16 px-4 bg-sky-light text-center">
    <p class="text-navy font-semibold text-lg mb-4">Not sure which loan is right for you?</p>
    <a href="/contact" class="inline-block min-h-[44px] px-8 py-4 bg-navy hover:bg-navy-600 text-white font-semibold rounded-lg transition-all duration-200 hover:scale-105">
      Let's talk
    </a>
  </section>
</Layout>
