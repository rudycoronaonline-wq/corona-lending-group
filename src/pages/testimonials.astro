---
import Layout from '../layouts/Layout.astro';
import TestimonialCard from '../components/TestimonialCard.astro';
import { testimonials } from '../data/testimonials';
---

<Layout
  title="What Our Clients Say | Corona Lending Group Testimonials"
  description="Read what clients say about working with Rudy Corona and Corona Lending Group for their mortgage needs."
  pathname="/testimonials"
>
  <section class="bg-navy text-white py-16 md:py-20 px-4">
    <div class="container mx-auto text-center">
      <h1 class="font-heading text-4xl md:text-5xl font-bold mb-4">What Our Clients Say</h1>
      <p class="text-white/90 text-lg max-w-2xl mx-auto">
        Real stories from homeowners and investors across California.
      </p>
    </div>
  </section>

  <section class="py-20 px-4 bg-page">
    <div class="container mx-auto">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {testimonials.map((t) => (
          <TestimonialCard name={t.name} loanType={t.loanType} quote={t.quote} stars={t.stars} city={t.city} />
        ))}
      </div>
      <!-- Future: Google/Zillow embed -->
    </div>
  </section>

  <section class="py-16 px-4 bg-white text-center">
    <p class="text-navy font-semibold text-lg mb-4">Ready to be our next success story?</p>
    <a href="/contact" class="inline-block min-h-[44px] px-8 py-4 bg-sky-500 hover:bg-sky-600 text-white font-semibold rounded-lg transition-all duration-200 hover:scale-105">
      Book Your Free Consultation
    </a>
  </section>
</Layout>
